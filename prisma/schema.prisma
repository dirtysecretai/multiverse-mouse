generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EchoMessage {
  id          Int      @id @default(autoincrement())
  name        String   @default("Anonymous")
  message     String
  visibleName Boolean  @default(false)
  createdAt   DateTime @default(now())
}